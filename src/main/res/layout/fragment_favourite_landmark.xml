<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0000">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fitsSystemWindows="true"
        tools:context=".Home"
        tools:openDrawer="start"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="#000000">


        <RelativeLayout
            android:id="@+id/close_lay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2FCD0C"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >


            <ImageView
                android:id="@+id/close"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="141dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/ic_highlight_off_black_24dp" />
        </RelativeLayout>

        <Spinner
            android:id="@+id/spinFavLandmark"
            android:layout_width="197dp"
            android:layout_height="29dp"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="67dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            android:text="My Favourite Landmark"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnShowLandmark"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="347dp"
            android:layout_marginEnd="100dp"
            android:background="#2FCD0C"
            android:text="Show On Map"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="271dp"
            android:layout_marginBottom="261dp"
            android:text="Website:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWeb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="271dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@+id/textView24"
            android:background="#000000"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="14dp"
            android:layout_toEndOf="@+id/textView15"
            android:background="#000000"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close_lay"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="161dp"
            android:text="Name:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>